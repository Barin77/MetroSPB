<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.metro_gui.Controller">

    <padding>
        <Insets bottom="20.0" left="5.0" right="5.0" top="10.0"/>
    </padding>

    <ComboBox fx:id="metrostart" layoutX="7.0" layoutY="33.0" prefWidth="200" promptText="Station A"/>
    <Label text="V"/>

    <ComboBox fx:id="metrofinish" layoutX="14.0" layoutY="33.0" prefWidth="200" promptText="Station B"/>

    <Label fx:id="TEXT"/>

    <Button text="Найти путь" onAction="#onButtonClick"/>
</VBox>
